---
interface Props {
  date: string;
  title: string;
  description: string;
}

const { date, title, description } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-[var(--description)] rounded-full mt-1.5 -start-1.5 border border-white"
>
</div>
<time
  class="mb-1 text-base text-[var(--title)] font-normal leading-none"
>
  {date}
</time>

<h3 class="text-lg font-semibold text-[var(--subtitle)] my-3">
  {title}
</h3>
<p class="mb-4 text-base font-normal text-[var(--description)]">
  {description}
</p>

